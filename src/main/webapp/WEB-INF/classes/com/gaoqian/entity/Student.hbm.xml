<?xml version="1.0" encoding='UTF-8'?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.gaoqian.entity.Student" table="student"><!--实体类映射，包名加类名-->
        <id name="sno" type="java.lang.String"><!--主键-->
            <column name="son"></column><!--表字段-->
        </id>
        <property name="sname" type="java.lang.String"><!--其他字段-->
            <column name="sname"></column>
        </property>
        <property name="sage" type="java.lang.Integer">
            <column name="sage"></column>
        </property>
        <property name="ssex" type="java.lang.String">
            <column name="ssex"></column>
        </property>
    </class>


</hibernate-mapping>